{
  "name": "zapshow-poc-playwright-ia",
  "private": true,
  "type": "module",
  "workspaces": [
    "api",
    "web"
  ],
  "scripts": {
    "dev": "concurrently --raw -k -n API,WEB \"cmd /d /s /c npm -w api run dev\" \"cmd /d /s /c npm -w web run dev\"",
    "dev:api": "npm -w api run dev",
    "dev:web": "npm -w web run dev",
    "build": "npm -ws run build",
    "test": "npm -ws run test",
    "build:api": "npm -w api run build",
    "build:web": "npm -w web run build",
    "test:api": "npm -w api run test",
    "test:web": "npm -w web run test"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.55.0"
  }
}
